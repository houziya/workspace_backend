<include file="../Public/header" />
<div class="ncenter_box">
<div class="accounttitle"><h1>晋级管理</h1></div>
<script language=javascript src="__PUBLIC__/Js/wpCalendar.js"></script>
<script language="JavaScript">
ifcheck = true;
function CheckAll(form)
{
	for (var i=0;i<form.elements.length-2;i++)
	{
		var e = form.elements[i];
		e.checked = ifcheck;
	}
	ifcheck = ifcheck == true ? false : true;
}
</script>



<table width="100%" class="tab3" border="0" cellpadding="3" id="tb1" cellspacing="1" bgcolor="#b9c8d0">
 <tr align="center">
    <th width="5%" nowrap><span></span></th>
	<th width="15%" nowrap><span>{:xstr('account')}</span></th>
	<th width="12%" nowrap><span>晋升前级别</span></th>
	<th width="15%" nowrap><span>晋升后级别</span></th>
    <th width="20%" nowrap><span>晋升差额</span></th>
    <th width="13%" nowrap><span>{:xstr('apply_date_time')}</span></th>
    <th width="13%" nowrap><span>{:xstr('confirm_date_time')}</span></th>
    <th  nowrap ><span>{:xstr('status')}</span></th>
</tr>
<form name="form3" method="post" action="__URL__/adminUserUpAC">
<volist name="list" id="vo">
    <tr class="content_td lz" align="center">
        <td><input type="checkbox" name="tabledb[]" value="{$vo['id']}" /></td>
        <td nowrap>{$vo['user_id']}</td>
        <td nowrap>{$voo[$vo['u_level']]}</td>
        <td nowrap>{$voo[$vo['up_level']]}</td>
        <td nowrap>{$vo['money']}</td>
        <td nowrap>{$vo.create_time|date='Y-m-d H:i:s',###}</td>
        <td><eq name="vo.pdt" value="0"> 未确认<else/>{$vo.pdt|date='Y-m-d H:i:s',###}</eq></td>
		<td><eq name="vo['is_pay']" value="0"><span style="color: #FF3300;">{:xstr('not_comfirmed')}</span></eq>
		<eq name="vo['is_pay']" value="1">{:xstr('is_confirmed')}</eq></td>
    </tr>
    </volist>
<tr>
	<td colspan="8">
    	 <input name="{:xstr('select_all')}" type="button" class="btn1" id="{:xstr('select_all')}" onclick="CheckAll(this.form)" value="{:xstr('select_all')}" />	  &nbsp;&nbsp;
	  <input type="submit" name="action" value="确认升级" class="btn1" onclick="if(confirm('确定要确认当前股东升级吗?')) return true; else return false;">&nbsp;&nbsp;
	  <input type="submit" name="action" value="{:xstr('delete')}" class="btn1" onclick="if(confirm('确定要删除吗?')) return true; else return false;">&nbsp;&nbsp;
      </form>
    </td>
</tr>
<tr align="center">
	<td colspan="4" align="center">
		<form method='post' action="__URL__/adminUserUp/">{:xstr('search_account')}：<input type="text" name="UserID" title="{:xstr('account_query')}">
    <input type="submit" name="Submit" value="{:xstr('query')}"  class="btn1"/>
    </form>
	</td>
	<td colspan="4">{$page}</td>
</tr>

</table>
</div>
</body>
</html>
