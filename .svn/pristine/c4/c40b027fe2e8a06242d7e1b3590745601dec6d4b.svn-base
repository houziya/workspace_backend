<include file="../Public/header" />
<script language=javascript src="__PUBLIC__/Js/wpCalendar.js"></script>
<style>
.gank{ color:#CCC;}
</style>
<div class="ncenter_box">
<div class="accounttitle"><h1>{:xstr('history_query')}</h1></div>
  <form id="form1" name="form1" method="post" action="__URL__/eb_history/">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td height="60">
      {:xstr('date_of_query')}ï¼š
