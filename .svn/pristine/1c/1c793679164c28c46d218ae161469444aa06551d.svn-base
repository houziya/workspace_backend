<script type="text/javascript" src="__PUBLIC__/ueditor/ueditor.config.js"></script>
<script type="text/javascript" src="__PUBLIC__/ueditor/ueditor.all.min.js"></script>
<form method='post' id="form1" name="form1" action="__URL__/News_add_save">
<table width="100%" border="0" cellpadding="5" cellspacing="0" class="tab4">
    <tr>
        <td width="15%" align="right">标题：</td>
        <td width="85%"><input  name="title" type="text" size="50" maxlength="200"></td>
    </tr>
    <tr>
        <td align="right">类型：</td>
        <td>
        <select name="type" id="type">
        <volist name="nclass" id="vooo" key="kk">
        <option value="{$kk}">{$vooo}</option>
        </volist>
        </select></td>
    </tr>
    <tr> 
        <td align="right">内容：</td>
        <td>
        <textarea id="myEditor" name="content"  style="width:100%"></textarea>
        </td>
    </tr>
    <tr>
        <td align="right">发布时间：</td>
        <td ><input  name="addtime" type="text" id="addtime" value="{$nowtime}" size="20" maxlength="50"></td>
    </tr>
    <tr>
        <td></td>
        <td class="center">
        <input type="hidden" name="status" value="1">
        <input type="hidden" name="user_id" value="1">
        <input type="submit" value="保存" class="button_text">
        　
        <input type="reset" name="button" id="button" value="{:xstr('reset')}" class="button_text" />
        　
        <input type="button" name="button2" id="button2" value="{:xstr('go_back')}" class="button_text" onclick="location.href='__URL__/index'"/>
        </td>
    </tr>
    <tr>
    <td colspan="2" style="height:10px"></td>
    </tr>
</table>
</form>
<script type="text/javascript"> var editor = new baidu.editor.ui.Editor(); editor.render("myEditor");</script>
