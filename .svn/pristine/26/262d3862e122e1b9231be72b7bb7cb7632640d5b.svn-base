<div class="row-fluid">
  <div class="span12">
    <h3 class="page-title"> 查看推荐关系 <small>My Homepage</small> </h3>
    <ul class="breadcrumb">
      <li> <i class="icon-home"></i> <a href="__APP__/Public/main">Home</a> <i class="icon-angle-right"></i> </li>
      <li><a href="/index.php?s=/User/relations">查看推荐关系</a></li>
    </ul>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="portlet box grey">
      <div class="portlet-title">
        <div class="caption"><i class="icon-list"></i> 查看推荐关系</div>
      </div>
      <div class="portlet-body flip-scroll">
        <table class="table table-hover table-bordered flip-content  table-full-width" style="font-size:12px">
          <thead>
            <tr>
              <th><div align="center">{:xstr('account')}</div></th>
			      <th><div align="center">昵称</div></th>
              <th><div align="center">{:xstr('name')}</div></th>
			      <th><div align="center">电话</div></th>
              <th><div align="center">{:xstr('reg_date_time')}</div></th>
              <th><div align="center">{:xstr('open_date_time')}</div></th>
            </tr>
          </thead>
          <tbody>
            <volist name="list" id="vo">
              <tr>
                <th><div align="center">{$vo['user_id']}</div></th>
				 <th><div align="center">{$vo['nickname']}</div></th>
                <th><div align="center">{$vo['user_name']}</div></th>
				 <th><div align="center">{$vo['user_tel']}</div></th>
                <th><div align="center">{$vo.rdt|date='Y-m-d',###}</div></th>
                <th><div align="center">{$vo.pdt|date='Y-m-d',###}</div></th>
              </tr>
            </volist>
          </tbody>
        </table>
        <table class="table table-hover table-bordered flip-content  table-full-width">
          <tr align="center">
           {$page}
          </tr>
        </table>
        <table class="table table-hover table-bordered flip-content  table-full-width">
          <tr align="center">
           <form method='post' action="__URL__/relations">
                {:xstr('account')}：
                <input type="text" name="UserID" title="{:xstr('account_query')}" class="medium" style="width:120px" > &nbsp;
                <input type="submit" name="Submit" value="{:xstr('query')}" class="btn green"/ >
              </form>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
