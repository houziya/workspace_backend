<style type="text/css">
<!--
.STYLE1 {color: #FF0000}
-->
</style>
<tagLib name="html" />
<include file="../Public/header" />
<div class="sub_bav">
<!-- 列表显示区域  -->
<table width="100%" cellpadding=0 cellspacing=1 border=1  >
<tr  class="tabletd">
  <td colspan="16">
  
		<form method='post' action="__URL__/adminsingle">
		<div class="fLeft"><span id="key">{:xstr('account')}：<input type="text" name="UserID" title="{:xstr('account_query')}"></span>
		  <input type="submit" name="Submit" value="{:xstr('query')}"  class="btn1"/>
		</div>
		<!-- 高级查询区域 -->
		<div  id="searchM" class=" none search cBoth" >
		</div>
		</form>
  
  </td>
</tr>
<form name="form3" method="post" action="__URL__/adminsingleAC">

<tr class="content_td" align="center">
	<td ><div align="center"><input type="checkbox" name="chkall" value="checkbox" onClick="CheckAll(this.form)"  class="btn2" id="chkall"></div></td>
	<td nowrap >{:xstr('account')}</td>
	<td nowrap >申请数量</td>
	<td nowrap >申请金额</td>
	<td nowrap >{:xstr('apply_date_time')}</td>
	<td nowrap >{:xstr('confirm_date_time')}</td>
	<td nowrap >{:xstr('status')}</td>
</tr>
<volist name="list" id="vo">
<tr class="content_td" align="center"> 
	<td><div align="center">
	  <input type="checkbox" name=tabledb[] value="{$vo['id']}" class="btn2">
	  </div></td>
	<td><a href="__URL__/adminuserData/PT_id/{$vo['uid']}">{$vo['user_id']}</a></td>
	<td><span class="STYLE1">{$vo['danshu']}</span></td>
	<td><span class="STYLE1">{$vo['money']}</span></td>
	<td>{$vo.adt|date='Y-m-d',###}</td>
	<td>{$vo.pdt|date='Y-m-d',###}</td>
	<td><eq name="vo['is_pay']" value="0"><span style="color: #FF3300;">{:xstr('not_comfirmed')}</span></eq>
	<eq name="vo['is_pay']" value="1">{:xstr('is_confirmed')}</eq></td>
</tr>
</volist>
<tr class="content_td">
	<td  colspan=16 ><input name="{:xstr('select_all')}" type="button" class="btn1" id="{:xstr('select_all')}" onClick="CheckAll(this.form)" value="{:xstr('select_all')}">
    &nbsp;&nbsp;
	  <input type="submit" name="action" value="{:xstr('confirm_2')}" onclick="if(confirm('{:xstr('are_you_sure')}')) return true; else return false;" class="btn1">&nbsp;&nbsp;
	  <input type="submit" name="action" value="{:xstr('delete')}" onclick="if(confirm('{:xstr('are_you_sure_to_delete')}')) return true; else return false;" class="btn1"></td>
</tr>
<tr class="content_td" align="center">
	<td  colspan=16 >{$page}</td>
</tr>
</form>
</table>
</div>
</body>
</html>