<include file="headers" />
<!-- BEGIN CONTAINER -->

<div class="page-container"> 
  <!-- BEGIN SIDEBAR --> 
  <include file="sidebar" /> 
  <!-- END SIDEBAR --> 
  <!-- BEGIN PAGE -->
  <div class="page-content"> 
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <h3 class="page-title"> 买入M包 <small>My Homepage</small> </h3>
          <ul class="breadcrumb">
            <li> <i class="icon-home"></i> <a href="__APP__/Public/main">Home</a> <i class="icon-angle-right"></i> </li>
          </ul>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <div class="portlet box">
            <div class="portlet-body ">
              <form action="__APP__/Mavro/buyAC" method="post" class="form-horizontal" id="commenform">
                 <!--
              <div class="control-group">
                  <label class="control-label" for="">入场卷编码:<span class="required">*</span></label>
                  <div class="controls input-icon">
                    <input name="zhucema" class="span3 m-wrap" id="zhucema" placeholder="输入入场卷编码" maxlength="12" >
                  </div>
                </div>
                -->
                <div class="control-group">
                  <label class="control-label" for="">剩余门票<span class="required">*</span></label>
                  <div class="controls input-icon">
                     <input type="text" class="span3 m-wrap" name="num" value="{$card_num}" disabled>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="">买入金额 <span class="required">*</span></label>
                  <div class="controls input-icon">
                    <select name="money" id="money" class="span3 m-wrap">
                      <volist name="s2" id="vo">
                        <option value="{$key}">{$vo}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;消耗{$vo/1000}张门票</option>
                      </volist>
                    </select>
                  </div>
                
                </div>
                <div class="control-group">
                  <label class="control-label" for="">安全密码<span class="required">*</span></label>
                  <div class="controls input-icon">
                     <input type="password" class="span3 m-wrap" name="password">
                  </div>
                </div>
				           
        <div align="left" class="pay_style"  style="display:none;">>
          <label>
            <input type="checkbox" value="0" name="pay_type[]" checked="checked">
            银行支付</label>
          <label>
            <input type="checkbox" value="1" name="pay_type[]" checked="checked" >
            支付宝支付</label>
          <label>
            <input type="checkbox" value="2" name="pay_type[]" checked="checked" >
            微信支付</label>
          <label>
            <input type="checkbox" value="3" name="pay_type[]" checked="checked" >
            财富通</label>
        </div>

                <div class="form-actions">
                  <button type="submit" class="btn green" id="joinformsubbtn" onclick="if(confirm('确定要买入吗？')) return true; else return false;">确认买入 </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- END PAGE CONTAINER--> 
  </div>
</div>
<!-- END PAGE --> 
<!-- END CONTAINER --> 
<!--FOOTERS START--> 
<include file="common/footer" />
