<div class="row-fluid">
  <div class="span12">
    <h3 class="page-title"> 修改密码 <small>My Homepage</small> </h3>
    <ul class="breadcrumb">
      <li> <i class="icon-home"></i> <a href="__APP__/Public/main">Home</a> <i class="icon-angle-right"></i> </li>
      <li><a href="__APP__/Change/changepassword">修改密码</a></li>
    </ul>
  </div>
</div>
<div class="row-fluid">
<div class="span12">
<load href="__PUBLIC__/Js/UserJs.js" />
<div class="c_p5"><div class="tips">{:xstr('tpl138')}</div></div>
<form method='post' name="login" action="__URL__/changepasswordSave/">
<table width="100%" border="0" cellpadding="3" cellspacing="0" style="font-size:12px;">
  <tr>
    <td colspan="3" class="tabletd">&nbsp;</td>
    </tr>
  <tr>
    <td width="29%" align="right">{:xstr('tpl139')}：</td>
    <td width="14%">
          <input name="type" type="radio" value="1" checked="checked" /> {:xstr('first_password')}&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="radio" name="type" value="2"/> {:xstr('second_password')}<br />
          <!--<input type="radio" name="type" value="3" class="ipt_radi" /> {:xstr('third_password')}-->
 
 </td>
    <td width="57%">&nbsp;</td>
  </tr>
  <tr>
    <td width="29%" align="right">{:xstr('old_password')}：</td>
    <td width="14%"><input name="oldpassword" id="oldpassword" type="password" maxlength="50" class="ipt" onkeyup="javascript:Null_Full(this.name)" onfocus="notice('0','')"  onblur="notice('0','none')"/></td>
    <td width="57%"><div id="oldpassword1" class="info"><div id="0" class="focus_r" style="display:none;"><div class="msg_tip">{:xstr('tpl140---')}</div></div></div></td>
  </tr>
  <tr>
    <td align="right">{:xstr('new_password')}：</td>
    <td><input  name="password" id="password" type="password" maxlength="50" class="ipt" onkeyup="javascript:Null_Full(this.name)" onfocus="notice('1','')" onblur="notice('1','none')"/></td>
    <td><div id="password1" class="info"><div id="1" class="focus_r" style="display:none;"><div class="msg_tip">{:xstr('tpl141---')}</div></div></div></td>
  </tr>
  <tr>
    <td align="right">{:xstr('confirm_new_password')}：</td>
    <td><input  name="repassword" id="repassword" type="password" maxlength="50" class="ipt" onkeyup="javascript:yhrePass(this.name,'password')" onfocus="notice('2','')" onblur="notice('2','none')"//></td>
    <td><div id="repassword1" class="info"><div id="2" class="focus_r" style="display:none;"><div class="msg_tip">{:xstr('tpl142---')}</div></div></div></td>
  </tr>
  <tr>
    <td align="right">{:xstr('verify_code')}：</td>
    <td><input name="verify" type="text" class="small bLeftRequire" size="4" maxlength="4" />
        <img src="__APP__/Public/verify/" border="0" alt="{:xstr('click_to_reflush_verify_code')}" id="verifyImg" onclick="fleshVerify()" style="cursor:pointer" align="absmiddle" />&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td colspan="3" style="height:5px;"><hr></td>
    </tr>
  <tr>
  <tr style="display:none">
    <td align="right">{:xstr('safe_question')}：</td>
    <td>{$vo['wenti']}</td>
    <td>&nbsp;</td>
    </tr>
  <tr style="display:none">
    <td align="right">{:xstr('tpl137')}：</td>
    <td><input name="wenti_dan" type="text" id="wenti_dan" value="" class="ipt"/></td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td><span class="tCenter">
      <input name="submit"  type="submit" class="btn blue" value="{:xstr('confirm_3')}" alt="{:xstr('confirm_2')}" />
      <input name="button"  type="reset" class="btn green" value="{:xstr('reset_2')}" alt="{:xstr('cancel_2')}" />
    </span></td>
    <td>&nbsp;</td>
  </tr>
</table></form>
<script language="JavaScript">
<!--
function fleshVerify(){
//重载验证码
var timenow = new Date().getTime();
$('verifyImg').src= '__APP__/Public/verify/'+timenow;
}
//-->
</script>
</div>
</div>