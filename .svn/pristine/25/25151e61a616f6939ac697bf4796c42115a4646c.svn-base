<tagLib name="html" />
<include file="../Public/header" />
<div class="ncenter_box">
<div class="sub_bav" style="padding-bottom:20px;">
<div class="accounttitle"><h1>认购原始代币</h1></div>
	<div style="margin:0 auto; width:650px; line-height:26px;">
		<fieldset style="padding:12px; width:200px; float:left;">
			<legend>账户信息</legend>
			股点数：<span style="color:#F00;">{$game_m}</span><br />
			持有代币数量：<span style="color:#F00;">{$live_gp}</span>
		</fieldset>
        <div style="width:400px; float:right;">
        	<form name="form1" method="post" action="__URL__/buyyuansAC" onsubmit="return checkf();">
          <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0" style="line-height:26px;">
            
            <tr>
              <td height="24" colspan="2" align="center">&nbsp;</td>
            </tr>
            <tr>
              <td width="40%" height="30" align="right">认购数量：</td>
              <td align="left"><input name="sNun" type="text" id="sNun"  maxlength="20" onBlur="value=value.replace(/[^0-9]/g,'');tot_price();">
                个</td>
            </tr>
            <tr>
              <td height="30" align="right" style="border-right:none;">当前价格：</td>
           	    <td align="left"><input name="one_price" type="hidden" id="one_price"  maxlength="20" value="{$one_price}"  onBlur="value=value.replace(/[^0-9.]/g,'');tot_price();" readonly style="background-color:#ddd;">
                {$one_price}/个 &nbsp;&nbsp; 
                
                </td>
            </tr>
            <tr>
              <td height="30" align="right" style="border-right:none;"></td>
           	    <td align="left">
                <span style="color:#D00;">每交易 {$sellGradient} 个升 {$sellUpPerTime} 元，距离下一次涨价还差 {$sellDistance} 个</span>
                </td>
            </tr>
             <tr>
              <td height="30" align="right" style="border-right:none;">总售价：</td>
            	  <td align="left">
				  	<span style="color:#960" id="tot_price">0</span>
               </td>
            </tr>
            <tr style="display:none;">
              <td height="30" align="right" style="border-right:none;">三级密码：</td>
            	  <td align="left">
				  	<input name="gp_pwd" type="password" id="gp_pwd" value="" />
               	</td>
            </tr>
            <tr>
              <td height="30" align="right">&nbsp;</td>
              <td align="left">
              <input type="submit" name="button2" id="button2" value="确认购入" class="btn1">
                <input name="cPP" type="hidden" id="cPP" value="122">
                <input name="PID" type="hidden" id="PID" ></td>
            </tr>
             
            <tr>
              <td height="24" colspan="2" align="center"><span style="color:#F00; font-weight:bold;"><!--记录只能发布三天--></span></td>
            </tr>
          </table>
          </form>
        </div>
        <fieldset style="padding:12px; width:200px; float:left;">
			<legend>原始代币信息</legend>
			总发行量：<span style="color:#F00;">{$allGupiao}</span><br />
			累计出售：<span style="color:#F00;">{$gpSellCount}</span><br />
			剩余：<span style="color:#F00;">{$allGupiao-$gpSellCount}</span><br />
			<br />
			当前价格：<span style="color:#F00;">{$one_price}</span>
		</fieldset>
        <div style="clear:both; height:0; overflow:hidden"></div>
	<div>
    		

</div>
</div>
</div>
</body>
</html>

<script type="text/javascript">
function tot_price(){
	var one_price = document.getElementById('one_price').value;//单价
	var sNun	= document.getElementById('sNun').value;//数量
	var t_price = formatNumberUnitsDivd(parseFloat(sNun * one_price));
	document.getElementById('tot_price').innerHTML = t_price+'';
}
function formatNumberUnitsDivd(num) {
	return num.toFixed(4);
}
function checkf(){
	if(document.form1.one_price.value==""){
		alert("请输入价格");
		document.form1.one_price.focus();
		return false;
	}
	if(document.form1.sNun.value==""){
		alert("请输入购买代币数量");
		document.form1.sNun.focus();
		return false;
	}
	var one_price = document.getElementById('one_price').value;//单价
	var sNun	= document.getElementById('sNun').value;//数量
	var t_price = formatNumberUnitsDivd(parseFloat(sNun * one_price)); 
	if(confirm("您确定要购买 "+document.form1.sNun.value+" 个 原始代币吗？\n\n每股单价："+document.form1.one_price.value+"\n\n购买总额："+t_price)){
		return true;
	}else{
		return false;
	}
}
</script>
<script>new TableSorter("tb1");</script>